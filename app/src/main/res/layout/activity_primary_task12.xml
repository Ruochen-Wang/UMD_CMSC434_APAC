<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alarm_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/task1"
    tools:context=".PrimaryTask12Hour">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="230dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-light"
        android:text=" Set My Alarm"
        android:textColor="#F3DEA7"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/time_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Change to 24 hour mode"
        android:textColor="@color/colorPrimary"
        android:fontFamily="sans-serif-light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/hr_input"
        android:layout_width="151dp"
        android:layout_height="115dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="180dp"
        android:backgroundTint="@color/cardview_light_background"
        android:ems="10"
        android:inputType="number"
        android:maxLength="2"
        android:textAlignment="center"
        android:textColor="#F3DEA7"
        android:textCursorDrawable="@null"
        android:textSize="36sp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/min_input"
        android:layout_width="150dp"
        android:layout_height="115dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:backgroundTint="@color/cardview_light_background"
        android:ems="10"
        android:inputType="number"
        android:maxLength="2"
        android:textAlignment="center"
        android:textColor="#F3DEA7"
        android:textCursorDrawable="@null"
        android:textSize="36sp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coln"
        android:layout_width="16dp"
        android:layout_height="80dp"
        android:layout_marginTop="190dp"
        android:text=":"
        android:textColor="#FFFCFC"
        android:textSize="60dp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintEnd_toStartOf="@+id/min_input"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toEndOf="@+id/hr_input"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/AMPM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorPrimary"
        android:textOff="AM"
        android:textOn="PM"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/set"
        android:layout_width="236dp"
        android:layout_height="48dp"
        android:layout_marginTop="390dp"
        android:background="@drawable/gradient"
        android:fontFamily="sans-serif-light"
        android:onClick="set_alarm"
        android:text="SET"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/alarm2info"
        android:layout_width="157dp"
        android:layout_height="71dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/activity_btn"
        android:fontFamily="sans-serif-light"
        android:text="Personal Data"
        android:textAlignment="center"
        android:textColor="#e0e0e0"
        android:textCursorDrawable="@null"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/alarm2night"
        android:layout_width="168dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/activity_btn"
        android:fontFamily="sans-serif-light"
        android:text="Sleeping Data"
        android:textAlignment="center"
        android:textColor="#e0e0e0"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <RelativeLayout
        android:id="@+id/dim_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C0000000"
        android:visibility="gone"></RelativeLayout>

    <TextView
        android:id="@+id/usr_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="#F3DEA7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_format" />

</androidx.constraintlayout.widget.ConstraintLayout>